<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_itemPicture"
        android:layout_width="113dp"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="39dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/item_title_list"
        android:layout_width="189dp"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/list_itemPicture"
        android:inputType="textMultiLine|text"
        android:text="Item Name"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/item_price_list"
        android:layout_width="101dp"
        android:layout_height="31dp"
        android:layout_below="@+id/item_title_list"
        android:layout_marginStart="27dp"
        android:layout_marginTop="3sp"
        android:layout_toEndOf="@+id/list_itemPicture"
        android:text="$5.00"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/item_claim_button_list"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_below="@+id/item_title_list"
        android:layout_marginStart="144dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/list_itemPicture"
        android:background="@color/colorPrimaryDark"
        android:text="Claim"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="86dp" />
</RelativeLayout>